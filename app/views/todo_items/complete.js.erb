<% if @todo_item.completed? %>
	$('#mark_<%= @todo_item.id%>').addClass('opac');
	$('#item_<%= @todo_item.id%>').addClass('strike').addClass('opac');
<% else %>
    $('#mark_<%= @todo_item.id%>').removeClass('opac');
	$('#item_<%= @todo_item.id%>').removeClass('strike').removeClass('opac');
<% end %>
